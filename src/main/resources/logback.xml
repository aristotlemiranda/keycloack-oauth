<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%black(%d{HH:mm:ss.SSS}) %green([%thread]) %highlight(%-5level) %cyan(%X{sessionId}) %yellow(%logger{36}) - %magenta(%msg)%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>